<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2Odev.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2Odev"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" >

        <ShellContent
       Title="Ana Sayfa"
       ContentTemplate="{DataTemplate local:MainPage}"
       Route="MainPage" 
       Icon="home.png"/>

        <ShellContent
     Title="Kurlar"
     ContentTemplate="{DataTemplate local:Kurlar}"
     Route="Kurlar"
     Icon="currency.png"/>

        <ShellContent
     Title="Haberler"
     ContentTemplate="{DataTemplate local:Haberler}"
     Route="Haberler"
     Icon="news.png"/>

        <ShellContent
     Title="HavaDurumu"
     ContentTemplate="{DataTemplate local:HavaDurumu}"
     Route="HavaDurumu"
     Icon="weather.png"/>

        <ShellContent
     Title="ToDoList"
     ContentTemplate="{DataTemplate local:ToDoList}"
     Route="ToDoList"
     Icon="todo.png"/>

        <ShellContent
     Title="Ayarlar"
     ContentTemplate="{DataTemplate local:Ayarlar}"
     Route="Ayarlar"
     Icon="settings.png"/>

    </FlyoutItem>
</Shell>
